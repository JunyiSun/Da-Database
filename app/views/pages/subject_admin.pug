extends ../layout

block content
  .container
    .row
      form.form-horizontal(method="post", action="/admin/subject")
        .form-group
          label.col-sm-2.control-label(for="inputSubject") Subject
          .col-sm-10
            input#inputSubject.form-control(type="text", name="subject[name]", value=subject.name)
        .form-group
          .col-sm-offset-2.col-sm-10
          button.btn.btn-default(type="submit") Save
