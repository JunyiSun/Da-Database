extends ../layout

block content
  .container
    .row
      table.table.table-hover.table-bordered
        thead
          tr
            th Subject
            th Title
            th Author
            th Course
            th Edition
            th Price
            th Last Update
            th pv
            th rating
            th View
            th Edit
            th Delete
        tbody
          each item in textbooks
            tr(class="item-id-#{item._id}")
              if item.subject
                td #{item.subject.name}
              else 
                td N/A
              td #{item.title}
              td #{item.author}
              td #{item.course}
              td #{item.edition}
              td #{item.price}
              td #{moment(item.meta.updateAt).format('MM/DD/YYYY')}
              td #{item.pv}
              td #{item.rating}
              td: a(href="/textbook/#{item._id}") View
              td: a(href="/admin/textbook/update/#{item._id}") Edit
              td
                button.btn.btn-danger.textbookDel(type="button", data-id="#{item._id}") Delete
  script(src="/js/list.js")       
