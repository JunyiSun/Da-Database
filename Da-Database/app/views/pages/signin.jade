extends ../layout

block content
  .container
    .row
      .col-md-offset-4.col-md-5.m-signForm
        form(method="POST", action="/user/signin")#dSigninForm
          .modal-header Re-authentication: Log In
          .modal-body.clearfix
            span.err_tip(style="display:none;")
            .form-group.clearfix
              label(for="dSigninEmail") Email
              input#dSigninEmail.form-control(name="user[email]", type="text")
            .form-group.clearfix
              label(for="dSigninPassword") Password
              input#dSigninPassword.form-control(name="user[password]", type="password")
          .modal-footer
            a(href="/"): button.btn.btn-default(type="button") Close
            button.btn.btn-success(type="submit") Log In
